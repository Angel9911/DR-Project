<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <context-param>
        <param-name>routeAuth</param-name>
        <param-value>/auth-service/**</param-value>
    </context-param>
    <context-param>
        <param-name>jwtHeader</param-name>
        <param-value>Authorization</param-value>
    </context-param>
    <context-param>
        <param-name>jwtPrefix</param-name>
        <param-value>Bearer</param-value>
    </context-param>
    <context-param>
        <param-name>jwtExpirations</param-name>
        <param-value>1800000</param-value>
    </context-param>
    <context-param>
        <param-name>jwtSecret</param-name>
        <param-value>secretkey</param-value>
    </context-param>

</web-app>
